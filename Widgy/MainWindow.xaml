<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Widgy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Widgy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border BorderBrush="White" BorderThickness="2" Margin="12" Height="{Binding ElementName=STP,Path=ActualHeight}" Width="150" HorizontalAlignment="Left" CornerRadius="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
            
            <Button x:Name="myButton" Foreground="DarkSlateGray" VerticalAlignment="Top" Margin="2" HorizontalAlignment="Left" Click="myButton_Click">Home</Button>

            <Button x:Name="newButton" Foreground ="DarkSLateGray" VerticalAlignment="Top" Margin="2" HorizontalAlignment="Left" Click="newButton_Click">New Widget</Button>
            
        </StackPanel>
    </Border>

</Window>
